{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer", "supports"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["color-mix"]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["user-invalid"]
      }
    ]
  }
}